{% extends 'baseAdmin.html.twig' %}



{% block body2 %}

    <h3>Gérer les sites</h3>

    {# afficher form pour filtrer----------------------- -#}

    {{ form_errors(form) }}
    {{ form_start(form) }}

    {{ form_row(form.nomSiteContient) }}
    <button type="submit">Rechercher</button>
    {{ form_end(form) }}


    {# Afficher liste de sites filtrée -------------------------------- -#}
    {% if sites is empty %}
        <p>Aucun site trouvé</p>

    {% else %}
        <table class="table">
            <thead>
            <tr>
                <th>Ville</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for site in sites %}
                <tr>
                    <td>{{ site.nomSite }}</td>
                    <td>

                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_sites_update', {'id': site.id}) }}" type="button"
                               class="btn btn-outline-secondary">Modifier</a>
                        {% endif %}

                        {% if is_granted('ROLE_ADMIN') %}

                            <a href="{{ path('app_sites_delete', {'id': site.id}) }}" type="button"
                               class="btn btn-danger"  onclick="return confirm('Etes-vous sûr ?')">Supprimer</a>

                        {% endif %}


                    </td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}

            <tr>
                <td></td>
                <td><a href="{{ path('app_sites_create') }}">Ajouter</a></td>
            </tr>

            </tbody>

        </table>
    {% endif %}
{% endblock %}
 {% block title %}{{ parent() }} | Dashboard{% endblock %}


