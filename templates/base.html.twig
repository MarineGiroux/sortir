        <script src="{{ asset('app.js') }}"></script>
    {% endblock %}

    {% block navbarVertical %}
        <style>
            .navbar-vertical {
                height: 100vh; /* Pleine hauteur de l'Ã©cran */
                background-color: #f2c9b1; /* Couleur de fond */
            }
        </style>
    {% endblock %}

</head>

<body class="fs-6" style="background-image: url('{{ asset('img/paysage.svg') }}');">
<header>
    {% include('navbar.html.twig') %}
{#    {% if is_granted('ROLE_ADMIN') %}#}
