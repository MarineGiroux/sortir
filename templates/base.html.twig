<main class="flex-grow-1">
    <div class="container-md align-items-center main-ctn" >
        <div class="container-md secondary-ctn">
                {% block body %}

                {% endblock %}
        </div>
    </div>
</main>

<footer class="bg-body-tertiary text-center text-lg-start fixed-bottom">
    <div class="text-center p-3" >
        &copy; sortir.com {{ "now"|date("Y") }}
    </div>
</footer>
</body>
</html>