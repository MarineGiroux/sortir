                                                {% for user in sortie.users %}
                                                    {% if user.email == app.user.email %}
                                                        {% set flag = 1 %}
                                                    {% endif %}
                                                {% endfor %}
                                                {% if flag == 0 and (sortie.users|length < sortie.nbInscriptionMax) %}
                                                    <a href="{{ path('app_inscription', {'id': sortie.id, 'etatSortie':sortie.etat.libelle }) }}"><button type="button" class="btn btn-outline-primary btn-sm">S'inscrire</button></a>
