{% extends 'base.html.twig' %}
{% form_theme sortieform 'bootstrap_5_layout.html.twig' %}

{% block title %}Annuler une sortie{% endblock %}

{% block body %}

    <h2>Annuler la sortie : {{ sortie.nomSortie }}</h2>

    <br>
    <table class="table">

        <tbody>
        <tr>
            <th>Nom de la sortie :</th>
            <td>{{ sortie.nomSortie }}</td>
        </tr>
        <tr>
            <th>Date de la sortie :</th>
            <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Ville organisatrice :</th>
            <td>{{ sortie.site.nomSite }}</td>
        </tr>
        <tr>
            <th>Lieu :</th>
            <td>{{ sortie.lieu.nomLieu }} {{ sortie.lieu.rue }} {{ sortie.lieu.ville.codePostal }} {{ sortie.lieu.ville.nomVille }}</td>
        </tr>
        </tbody>
    </table>

    {{ form_start(sortieform) }}
    {{ form_widget(sortieform) }}

    <button type="submit" name="submitAction" value="annuler" class="btn btn-outline-secondary">Annuler la sortie</button>
    <a href="{{ path('app_home') }}"><button type="button" name="annuler" class="btn btn-outline-danger">Retour</button></a>

    {{ form_end(sortieform) }}

{% endblock %}
